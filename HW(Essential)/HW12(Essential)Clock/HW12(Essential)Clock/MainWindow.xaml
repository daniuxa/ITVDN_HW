<Window x:Class="HW12_Essential_Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW12_Essential_Clock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="TimeDisplay" HorizontalAlignment="Center" Margin="0,118,0,0" TextWrapping="Wrap" Text="0:00" VerticalAlignment="Top" Height="35" Width="88" FontSize="24" TextAlignment="Center"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="229,217,0,0" VerticalAlignment="Top" Height="46" Width="90" FontSize="18" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="46" Width="90" FontSize="18" Click="StopButton_Click"/>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="481,217,0,0" VerticalAlignment="Top" Height="46" Width="90" FontSize="18" Click="ResetButton_Click"/>

    </Grid>
</Window>
