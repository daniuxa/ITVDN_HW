        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW12_Essential_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBoxField" HorizontalAlignment="Center" Height="26" Margin="0,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="288" RenderTransformOrigin="0.502,0.54"/>
        <Button x:Name="CalculateButton" Content="Calculate" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" Height="29" Width="64" Click="CalculateButton_Click"/>
        <TextBlock x:Name="ResultBlock" HorizontalAlignment="Left" Height="26" Margin="549,119,0,0" TextWrapping="Wrap" Text="=" VerticalAlignment="Top" Width="173"/>
    </Grid>
</Window>
